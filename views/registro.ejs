<%- include('partials/header'); -%>


<form class="box" action="/registro" method="POST">
    <h1>aidUDO</h1>
    <img class="boxlogo" src="/img/logo1.png" alt="">
    <input required type="text" name="username" placeholder="Usuario">
    <input type="text" required name="nombreUsuario" placeholder="Nombre y Apellido">
    <input required type="password" name="password" placeholder="Contraseña">
    <select name="especialidad" id="select">
        <option value="agronomia">Ingeniería Agronómica</option>
        <option value="petroleo">Ingeniería de Petróleo</option>
        <option value="sistemas">Ingeniería de Sistemas</option>
        <option value="produccion">Ingeniería en Producción Animal</option>
        <option value="administracion">Licenciatura en Administración</option>
        <option value="contaduria">Licenciatura en Contaduría Pública</option>
        <option value="rrhh">Licenciatura en Gerencia de Recursos Humanos</option>        
        <option value="alimentos">Licenciatura en Tecnología de los Alimentos</option>        
    </select>
    <input class="boxcancel" type="submit" value="Registrarse">
    <a class="boxcancel" role="button" href="/">Cancelar</a>
</form>

<%- include('partials/footer'); -%>